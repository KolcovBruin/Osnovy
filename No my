
#include <stdio.h>
// определение символических констант
#define YES 1
#define NO 0
#define MAXLINE 1000
void process_line( char buffer[] );
int main( void )
{
    char line[MAXLINE];
    gets( line );
    process_line( line );
    puts( line );
    return 0;
}
void process_line( char buffer[] )
{
    
    char c;
    int prev_c;
    int flag;
    int found;
    int i;
    int a=0;
    int pos; // позиция текущего символа // результирующей строки
    int start; // позиция начала слова
    int j;
    // начальные присваивания (инициализация)
    flag = NO;
    found = NO;
    prev_c = ' ';
    start = 0;
    i = 0;
    pos = 0;
    // цикл чтения символов из строки
    do
    {
        c = buffer[i]; // взять текущий символ из // буфера
        if( c == ' ' || c == '.' || c == ',' ||
           c == '\n' || c == '\0')
        {
            // найден разделитель
            if( flag == YES )
            {
                if( found == NO )
                {
                    for( j = start; j < i; j++ )
                    buffer[pos++] = buffer[j];
                }
                a=0;
            }
            flag = NO;
            buffer[pos++] = c;
        }
                    else {
                        
            // найдена буква
            if( flag == NO )
                start = i;
            // запомнить позицию
                        if (c=='A'||c=='E'||c=='I'||c=='O'||c=='U'||c=='Y'||c=='a'||c=='e'||c=='i'||c=='o'||c=='u'||c=='y')
                            a++;
                        a=a%2;
            if( a==0)
                found = YES;
            else
                found = NO;
            flag = YES; }
        prev_c = c;
        i++;
        
    }
    while( c != '\0' );
    //buffer[pos] = '\0';
}
